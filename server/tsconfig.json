{
  "compilerOptions": {

    "resolveJsonModule": true,
    "target": "es2017",
    "module": "commonjs",
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@config/*": [ "./src/config/*" ],
      "@controllers/*": [ "./src/controllers/*" ],
      "@database/*": [ "./src/database/*" ],
      "@utils/*": [ "./src/utils/*" ]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*"
  ]
}
